@{
    ViewData["Title"] = "Harmoniser";
}
<h2>@ViewData["Title"]</h2>
@*<h3>@ViewData["Message"]</h3>*@
    <form>
        <div class="form-group form-inline">
            <input id="getHarmonies" class="btn-sm btn-info btn" type="button" value="Get Harmonies">
            
            <label>Chord</label>
            <select id="chord">
                <option value="C">C</option>
                <option value="F">F</option>
                <option value="G">G</option>
            </select>

        </div>
        
        <div class="form-group form-inline">
            <label>Soprano</label>
            <input required type="text" name="soprano" id="soprano" class="form-control" placeholder="Soprano" />
           
            
           

        </div>

        <div class="form-group form-inline">
            <label>Alto</label>
            <input required type="text" name="alto" id="alto" class="form-control" placeholder="Alto" />
        </div>

        <div class="form-group form-inline">
            <label>Tenor</label>
            <input required type="text" name="tenor" id="tenor" class="form-control" placeholder="Tenor" />
        </div>

        <div class="form-group form-inline">
            <label>Bass</label>
            <input required type="text" name="bass" id="bass" class="form-control" placeholder="Bass" />
        </div>

    </form>




